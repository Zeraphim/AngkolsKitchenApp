<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="295dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="295dp"
        android:orientation="vertical"
        android:padding="5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/pop_img"
            android:layout_width="310dp"
            android:layout_height="190dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="20dp" /> <!-- android:src="" add image here -->

        <TextView
            android:id="@+id/pop_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Popular Products"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pop_des"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:text="description" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/star_rating"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/pop_rating"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:text="5.0" />

            <TextView
                android:id="@+id/pop_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="end"
                android:textColor="#EF4D23"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"/>


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>